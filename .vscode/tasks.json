{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ninja",
            "type": "process",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "install",
            "type": "process",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
                "install"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "pytest",
            "type": "process",
            "command": "py.test",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "sphinx",
            "type": "process",
            "command": "make",
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/python/doc"
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}