{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "ninja",
            "type": "process",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group":{
                "kind": "build",
                "isDefault": true
            }

        },
        {
            "taskName": "pytest",
            "type": "process",
            "command": "py.test",
            "options": {
                "cwd": "${workspaceRoot}/python"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}